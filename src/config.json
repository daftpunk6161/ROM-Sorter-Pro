{
  "gui_settings": {
    "default_sort_mode": "move",
    "window_width": 1680,
    "window_height": 980,
    "theme": "Light",
    "drag_drop_enabled": true,
    "default_conflict_policy": "overwrite"
  },
  "scanner": {
    "use_high_performance": true,
    "max_threads": 0,
    "chunk_size": 4194304,
    "follow_symlinks": false,
    "use_cache": true,
    "recursive": true,
    "max_depth": -1
  },
  "ui": {
    "theme": "Light",
    "language": "de_DE",
    "remember_window_state": true,
    "remember_last_directories": true,
    "show_tooltips": true,
    "animation_speed": 1.0,
    "icon_size": "medium",
    "enable_drag_drop": true,
    "show_status_bar": true,
    "show_toolbar": true
  },
  "database": {
    "use_memory_cache": true,
    "cache_size_mb": 100,
    "auto_backup": true,
    "backup_interval_days": 7,
    "backup_max_count": 10,
    "vacuum_on_exit": true
  },
  "cache": {
    "enabled": true,
    "max_size_mb": 500,
    "clean_on_exit": false,
    "expiry_days": 30
  },
  "features": {
    "sorting": {
      "console_sorting_enabled": true,
      "create_console_folders": true,
      "region_based_sorting": false,
      "preserve_folder_structure": false
    }
  },
  "dats": {
    "auto_build": true
  }
}