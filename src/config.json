      "quarantine_folder_name": "Quarantine",
      "preserve_folder_structure": false,
      "auto_create_directories": true,
      "rename_template": "{name}{ext_dot}",
      "confidence_threshold": 0.95,
      "conversion": {
        "enabled": true,
        "require_dat_match": true,
        "fallback_on_missing_tool": true,
        "tools": {
          "chdman": "C:\\tools\\conversion\\chdman\\chdman.exe",
