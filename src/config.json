{
    "_metadata": {
        "version": "2.1.1",
        "description": "ROM Sorter Pro v2.1.1 - Optimized Configuration for Maximum Performance",
        "last_updated": "2024-01-15",
        "encoding": "utf-8",
        "config_version": 2,
        "author": "ROM Sorter Pro Team",
        "compatibility": "2.1.x"
    },
    
    "file_detection": {
        "rom_extensions": [
            ".zip", ".7z", ".rar", ".tar.gz", ".tar.bz2", ".xz", ".lzma",
            ".iso", ".bin", ".cue", ".img", ".mdf", ".nrg", ".chd", ".ccd", ".sub",
            ".gb", ".gbc", ".gba", ".sgb", ".dmg",
            ".nes", ".unf", ".unif", ".fds", ".nsf",
            ".snes", ".smc", ".sfc", ".fig", ".swc", ".st",
            ".n64", ".v64", ".z64", ".rom", ".u64", ".jst", ".mpk",
            ".gcm", ".gcz", ".rvz", ".wia", ".ciso",
            ".wbfs", ".wad", ".dol", ".elf", ".u8", ".app",
            ".nds", ".3ds", ".cia", ".3dsx", ".cci", ".cxi",
            ".xci", ".nsp", ".nsz", ".kip", ".nca", ".tik",
            ".mgw", ".vb", ".vboy", ".int",
            ".sms", ".gg", ".md", ".gen", ".smd", ".sgd",
            ".32x", ".scd", ".mds",
            ".cdi", ".gdi", ".lst", ".dat",
            ".pbp", ".prx", ".cso", ".dax", ".jso",
            ".xbe", ".xex", ".god", ".xbla", ".xcp",
            ".mx1", ".mx2", ".dsk", ".cas", ".wav", ".tap",
            ".a26", ".a52", ".a78", ".lnx",
            ".d64", ".t64", ".prg", ".p00", ".g64", ".x64",
            ".adf", ".adz", ".dms", ".fdi", ".ipf", ".hdf",
            ".msa", ".dim", ".stx", ".pasti",
            ".tzx", ".z80", ".sna"
        ],
        "unwanted_patterns": [
            "\\b(japan|jp|jap)\\b",
            "\\b(demo|beta|alpha|sample|preview)\\b", 
            "\\b(hack|hacked|pirate|cracked)\\b",
            "\\b(test|debug|unfinished)\\b",
            "\\b(prototype|proto|prerelease)\\b",
            "\\b(homebrew|pd|public\\s*domain)\\b",
            "\\b(bad|corrupt|broken|damaged)\\b",
            "\\b(trainer|cheat|mod|modified)\\b",
            "\\b(overdump|underdump|alt|alternative)\\b",
            "\\b(bootleg|unlicensed|unofficial)\\b",
            "\\b(translated|translation)\\b"
        ],
        "priority_extensions": {
            ".zip": 10,
            ".7z": 9,
            ".iso": 8,
            ".bin": 7,
            ".rom": 6
        }
    },
    
    "prioritization": {
        "region_priorities": {
            "World": 10,
            "WOR": 10,
            "Europe": 9,
            "EU": 9,
            "EUR": 9,
            "Germany": 8,
            "DE": 8,
            "USA": 7,
            "US": 7,
            "NA": 7,
            "United Kingdom": 6,
            "UK": 6,
            "France": 5,
            "FR": 5,
            "Spain": 4,
            "ES": 4,
            "Italy": 4,
            "IT": 4,
            "Netherlands": 4,
            "NL": 4,
            "Australia": 3,
            "AU": 3,
            "Canada": 3,
            "CA": 3,
            "Japan": 2,
            "JP": 2,
            "Asia": 2,
            "Korea": 2,
            "KR": 2,
            "China": 1,
            "CH": 1,
            "Brazil": 1,
            "BR": 1,
            "Other": 1
        },
        "language_priorities": {
            "EN": 10,
            "English": 10,
            "DE": 9,
            "German": 9,
            "Deutsch": 9,
            "Multi": 8,
            "Multi5": 8,
            "Multi6": 8,
            "FR": 7,
            "French": 7,
            "ES": 6,
            "Spanish": 6,
            "IT": 5,
            "Italian": 5,
            "NL": 5,
            "Dutch": 5,
            "PT": 4,
            "Portuguese": 4,
            "RU": 3,
            "Russian": 3,
            "JA": 2,
            "Japanese": 2,
            "KO": 2,
            "Korean": 2,
            "ZH": 1,
            "Chinese": 1,
            "Other": 1
        },
        "quality_indicators": {
            "good_patterns": [
                "\\b(proper|final|complete|retail|gold)\\b",
                "\\b(remaster|enhanced|special\\s*edition|se)\\b",
                "\\b(definitive|ultimate|goty|gotye)\\b",
                "\\b(directors\\s*cut|extended|uncut)\\b",
                "\\b(collectors\\s*edition|ce|limited)\\b",
                "\\b(anniversary|deluxe|premium)\\b",
                "\\b(hd|high\\s*definition|4k)\\b",
                "\\b(revision|rev|v[1-9])\\b"
            ],
            "bad_patterns": [
                "\\b(bad|corrupt|broken|incomplete|damaged)\\b",
                "\\b(cracked|pirate|warez|ripped)\\b",
                "\\b(trainer|cheat|modified|mod)\\b",
                "\\b(overdump|underdump|alt|alternative)\\b",
                "\\b(bootleg|fake|clone|unlicensed)\\b",
                "\\b(demo|beta|alpha|preview|sample)\\b",
                "\\b(test|debug|unfinished|wip)\\b"
            ],
            "revision_bonus": 8,
            "language_match_bonus": 12,
            "region_match_bonus": 18,
            "size_bonus_threshold": 2097152,
            "format_bonus": {
                "retail": 15,
                "final": 12,
                "complete": 10,
                "proper": 8,
                "good": 5
            }
        }
    },
    
    "performance": {
        "caching": {
            "enable_caching": true,
            "cache_size": 5000,
            "lru_cache_size": 3000,
            "cache_cleanup_interval": 240,
            "hash_cache_ttl": 7200,
            "pattern_cache_size": 1000,
            "extension_cache_size": 500,
            "metadata_cache_ttl": 1800
        },
        "processing": {
            "parallel_workers": null,
            "batch_size": 300,
            "chunk_size": 2097152,
            "max_memory_usage": "1GB",
            "enable_memory_mapping": true,
            "memory_mapping_threshold": 104857600,
            "io_buffer_size": 65536,
            "prefetch_enabled": true,
            "compression_threads": 2
        },
        "optimization": {
            "precompile_patterns": true,
            "use_fast_hash": true,
            "enable_progress_batching": true,
            "lazy_loading": true,
            "memory_pool_size": "256MB"
        }
    },
    
    "features": {
        "sorting": {
            "console_sorting_enabled": true,
            "create_console_folders": true,
            "group_by_manufacturer": false,
            "sort_within_console": true,
            "region_based_sorting": true,
            "folder_structure": "console_first",
            "create_unknown_folder": true,
            "preserve_folder_structure": false,
            "auto_create_directories": true
        },
        "duplicate_detection": {
            "enabled": true,
            "smart_detection": true,
            "create_duplicates_folder": true,
            "hash_comparison": true,
            "size_comparison": true,
            "name_similarity": true,
            "similarity_threshold": 0.85,
            "keep_best_version": true
        },
        "advanced_detection": {
            "detect_homebrew": true,
            "detect_translations": true,
            "detect_hacks": true,
            "handle_homebrew": true,
            "detect_prototypes": true,
            "detect_demos": true,
            "region_detection": true,
            "language_detection": true
        },
        "ai_features": {
            "enable_ai_detection": false,
            "confidence_threshold": 0.85,
            "online_metadata": false,
            "download_covers": false,
            "cover_quality": "high",
            "metadata_sources": [
                "thegamesdb",
                "mobygames",
                "igdb",
                "screenscraper"
            ],
            "enable_fuzzy_matching": true,
            "ml_model_path": "models/console_detection.pkl"
        }
    },
    
    "operations": {
        "file_operations": {
            "move_files": true,
            "copy_files": false,
            "create_hardlinks": false,
            "preserve_timestamps": true,
            "skip_existing": true,
            "overwrite_policy": "never",
            "collision_handling": "rename",
            "safe_mode": true,
            "verify_operations": true,
            "atomic_operations": true,
            "backup_before_move": false,
            "preserve_permissions": true
        },
        "verification": {
            "verify_checksums": true,
            "backup_originals": false,
            "log_all_operations": true,
            "verify_after_copy": true,
            "checksum_algorithm": "md5",
            "parallel_verification": true
        },
        "cleanup": {
            "remove_empty_folders": true,
            "cleanup_temp_files": true,
            "remove_duplicates": false,
            "cleanup_on_exit": true
        }
    },
    
    "interface": {
        "logging": {
            "level": "INFO",
            "log_to_file": true,
            "log_file": "logs/rom_sorter.log",
            "max_log_size": "20MB",
            "backup_count": 10,
            "console_output": true,
            "performance_logging": true,
            "memory_tracking": true,
            "rotation_on_startup": false,
            "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "gui_settings": {
            "theme": "dark",
            "auto_scan": false,
            "show_preview": true,
            "real_time_stats": true,
            "drag_drop_enabled": true,
            "remember_window_size": true,
            "progress_updates": true,
            "window_width": 1024,
            "window_height": 768,
            "update_interval": 250,
            "show_tooltips": true
        },
        "notifications": {
            "desktop_notifications": true,
            "sound_notifications": false,
            "completion_notification": true,
            "error_notification": true,
            "progress_notifications": false,
            "notification_timeout": 5000
        },
        "web_interface": {
            "enabled": false,
            "host": "127.0.0.1",
            "port": 5000,
            "debug": false,
            "auto_open_browser": true,
            "websocket_enabled": true
        }
    },
    
    "presets": {
