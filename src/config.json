          "ndstrim": "C:\\tools\\conversion\\ndstrim\\ndstrim.exe",
          "nsz": "C:\\tools\\conversion\\nsz\\nsz.exe",
          "wit": "C:\\Program Files\\Wiimm\\WIT\\wit.exe",
          "wud2app": "C:\\tools\\conversion\\wud2app\\wud2app.exe",
          "wudcompress": "C:\\tools\\conversion\\WudCompress\\WudCompress.exe"
        },
        "rules": [
          {
            "name": "cd_to_chd",
            "enabled": true,
            "systems": [
              "PSX",
              "PS1",
              "Saturn",
              "Dreamcast",
              "SegaCD",
              "MegaCD",
              "PC Engine CD",
              "PCECD",
              "PC-FX",
              "Neo Geo CD",
              "NeoGeo CD"
            ],
            "extensions": [
              ".cue",
              ".gdi",
              ".cdi",
              ".iso"
            ],
            "to_extension": ".chd",
            "tool": "chdman",
            "args": [
              "createcd",
              "-i",
              "{src}",
              "-o",
              "{dst}"
            ]
          },
          {
            "name": "dvd_to_chd",
            "enabled": true,
            "systems": [
              "PS2",
              "Xbox",
              "Xbox 360",
              "GameCube",
              "Wii"
            ],
            "extensions": [
              ".iso"
            ],
            "to_extension": ".chd",
            "tool": "chdman",
            "args": [
              "createdvd",
              "-i",
              "{src}",
              "-o",
              "{dst}"
            ]
          },
          {
            "name": "psp_iso_to_cso",
            "enabled": true,
            "systems": [
              "PSP"
            ],
            "extensions": [
              ".iso"
            ],
            "to_extension": ".cso",
            "tool": "maxcso",
            "args": [
              "{src}",
              "{dst}"
            ]
          },
          {
            "name": "gc_wii_iso_to_rvz",
            "enabled": true,
            "systems": [
              "GameCube",
              "Wii"
            ],
            "extensions": [
              ".iso",
              ".gcm"
            ],
            "to_extension": ".rvz",
            "tool": "dolphintool",
            "args": [
              "convert",
              "-i",
              "{src}",
              "-o",
              "{dst}",
              "-f",
              "RVZ",
              "-s",
              "-c",
              "zstd",
              "-l",
              "5"
            ]
          },
          {
            "name": "wii_iso_to_wbfs",
            "enabled": true,
            "systems": [
              "Wii"
            ],
            "extensions": [
              ".iso"
            ],
            "to_extension": ".wbfs",
            "tool": "wit",
            "args": [
              "COPY",
              "{src}",
              "{dst}",
              "--wbfs"
            ]
          },
          {
            "name": "wii_wbfs_to_iso",
            "enabled": true,
            "systems": [
              "Wii"
            ],
            "extensions": [
              ".wbfs"
            ],
            "to_extension": ".iso",
            "tool": "wit",
            "args": [
              "COPY",
              "{src}",
              "{dst}",
              "--iso"
            ]
          },
          {
            "name": "nds_trim",
            "enabled": true,
            "systems": [
              "NDS"
            ],
            "extensions": [
              ".nds"
            ],
            "to_extension": ".trim.nds",
            "tool": "ndstrim",
            "args": [
              "-e",
              ".trim.nds",
              "{src}"
            ]
          },
          {
            "name": "wiiu_wud_to_wux",
            "enabled": true,
            "extensions": [
              ".wud"
            ],
            "to_extension": ".wux",
            "tool": "wudcompress",
            "args": []
          },
          {
            "name": "wiiu_wud_extract",
            "enabled": true,
            "extensions": [
              ".wud"
            ],
            "to_extension": ".wud",
            "tool": "wud2app",
            "args": []
          },
          {
            "name": "compress_to_7z",
            "enabled": false,
            "extensions": [
              ".iso",
              ".bin",
              ".cue",
              ".img",
              ".mdf",
              ".gdi",
              ".cdi"
            ],
            "to_extension": ".7z",
            "tool": "7z",
            "args": [
              "a",
              "-t7z",
              "{dst}",
              "{src}"
            ]
          },
          {
            "name": "switch_nsp_to_nsz",
            "enabled": false,
            "extensions": [
              ".nsp"
            ],
            "to_extension": ".nsz",
            "tool": "nsz",
            "args": [
              "-o",
              "{dst}",
              "{src}"
            ]
          },
          {
            "name": "switch_xci_to_nsz",
            "enabled": false,
            "extensions": [
              ".xci"
            ],
            "to_extension": ".nsz",
            "tool": "nsz",
            "args": [
              "-o",
              "{dst}",
              "{src}"
            ]
          },
          {
            "name": "chd_to_cue",
            "enabled": false,
            "extensions": [
              ".chd"
            ],
            "to_extension": ".cue",
            "tool": "chdman",
            "args": [
              "extractcd",
              "-i",
              "{src}",
              "-o",
              "{dst}"
            ]
          }
        ]
      }
