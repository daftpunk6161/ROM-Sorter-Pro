                    "parallel_workers": 8,
                    "batch_size": 500,
                    "chunk_size": 4194304
                },
                "caching": {
                    "cache_size": 10000,
                    "lru_cache_size": 5000
                }
            },
            "features": {
                "ai_features": {
                    "enable_ai_detection": false
                },
                "duplicate_detection": {
                    "smart_detection": false,
                    "hash_comparison": false
                }
            },
            "operations": {
                "verification": {
                    "verify_checksums": false,
                    "verify_after_copy": false
                }
            }
        },
        "quality_focused": {
            "description": "Maximale Qualität und Genauigkeit bei der ROM-Organisation",
