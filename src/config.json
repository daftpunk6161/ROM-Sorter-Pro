{
  "gui_settings": {
    "default_conflict_policy": "overwrite",
    "log_visible": false,
    "favorites": [
      {
        "source": "F:/AAAATransfer/test",
        "dest": "F:/AAAATransfer/Clean_Roms_Sorted",
        "label": "test \u2192 Clean_Roms_Sorted"
      }
    ],
    "window_width": 1680,
    "window_height": 980
  },
  "scanner": {
    "use_high_performance": true,
    "max_threads": 0,
    "chunk_size": 4194304,
    "follow_symlinks": false,
    "use_cache": true,
    "recursive": true,
    "max_depth": -1
  },
  "ui": {
    "theme": "system",
    "language": "de_DE",
    "remember_window_state": true,
    "remember_last_directories": true,
    "show_tooltips": true,
    "animation_speed": 1.0,
    "icon_size": "medium",
    "enable_drag_drop": true,
    "show_status_bar": true,
    "show_toolbar": true
  },
  "features": {
    "progress_persistence": {
      "enabled": true,
      "save_interval_sec": 10,
      "clear_on_success": true,
      "scan_resume_path": "cache/last_scan_resume.json",
      "sort_resume_path": "cache/last_sort_resume.json"
    },
    "rollback": {
      "enabled": true,
      "manifest_path": "cache/rollback/last_move_rollback.json"
    },
    "backup": {
      "enabled": true,
      "local_dir": "cache/backups",
      "onedrive_enabled": true,
      "onedrive_dir": null
    },
    "plugins": {
      "enabled": true,
      "paths": ["plugins"]
    }
  },
  "database": {
    "use_memory_cache": true,
    "cache_size_mb": 100,
    "auto_backup": true,
    "backup_interval_days": 7,
    "backup_max_count": 10,
    "vacuum_on_exit": true
  },
  "cache": {
    "enabled": true,
    "max_size_mb": 500,
    "clean_on_exit": false,
    "expiry_days": 30
  },
  "dats": {
    "import_paths": [
      "F:/AAAATransfer/DATs"
    ]
  }
}