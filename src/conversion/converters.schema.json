{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ROM Sorter Pro Converter Rules",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "converters"],
  "properties": {
    "version": {"type": "string"},
    "converters": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "converter_id": {"type": "string"},
          "name": {"type": "string"},
          "tool_key": {"type": "string"},
          "exe_path": {"type": "string"},
          "enabled": {"type": "boolean"},
          "platform_ids": {"type": "array", "items": {"type": "string"}},
          "extensions": {"type": "array", "items": {"type": "string"}},
          "input_kinds": {"type": "array", "items": {"type": "string"}},
          "output_extension": {"type": "string"},
          "args_template": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  }
}
